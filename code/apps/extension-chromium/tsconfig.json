{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "strict": true,
    "moduleResolution": "Bundler",
    "types": [
      "chrome"
    ],
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared": [
        "../../packages/shared/src/index.ts"
      ],
      "@shared/*": [
        "../../packages/shared/src/*"
      ],
      "@shared-extension/*": [
        "../../packages/shared-extension/src/*"
      ]
    }
  }
}