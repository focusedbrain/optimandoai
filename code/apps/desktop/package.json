{
  "name": "optimando-desktop",
  "version": "1.0.0",
  "description": "Optimando Desktop App - WebSocket Server",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "start-headless": "electron main.js --headless",
    "dev": "electron main.js --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.optimando.desktop",
    "productName": "Optimando Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "electron": "^28.0.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "electron-builder": "^24.0.0"
  }
}