{
  "id": "ui-textarea-v1",
  "tier": 3,
  "type": "atomic",
  "group": "ui.input",
  "security": "low",

  "intent_tags": ["input", "textarea", "notes"],
  "description": "Captures multiline text input (notes) and stores it in local runtime state.",

  "ui": {
    "kind": "textarea",
    "placeholder": "Enter text"
  },

  "behaviour": {
    "onChange": {
      "action": "state.set",
      "key": "textarea_value"
    }
  }
}