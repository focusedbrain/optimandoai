{
  "id": "ui-button-v1",
  "type": "atomic",
  "group": "ui.button",
  "security": "low",

  "intent_tags": ["button", "click", "notes", "save"],
  "description": "Renders a button typically used to save notes; emits a click event for handlers to persist state.",

  "ui": {
    "kind": "button",
    "label": "Save Notes"
  },

  "behaviour": {
    "onClick": {
      "action": "event.emit",
      "event": "button_clicked"
    }
  }
}